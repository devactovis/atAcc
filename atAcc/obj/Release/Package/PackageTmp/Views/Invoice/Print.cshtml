<body class="container-fluid" style="font-size: 15px !important;">
    <div id="main-wrapper">
        <br><br><br><br><br><br><br><br><br><br><br>
        <table class="table  table-bordered table-striped m-b-0">
            <th colspan="3" class="text-center" align="center">
                <strong>فاتورة ضريبية<br>TAX INVOICE</strong>
            </th>
            <tbody>
                <tr>
                    <td>
                        <span>Company Name: <br /><label id="companyname"></label></span> <br /><br />
                        <span id="partyspan">Party V.No: <br /><label id="partyvno"></label></span>
                    </td>
                    <td align="right" >: اسم الزبون  <br /><label id="companynamearabic"></label><br /><br /> :ظريبه الشراء   <br /><label id="partyvno"></label></td>
                    <td>
                        Invoice Date: <label id="invoicedate"></label> <br>
                        <div class="pull-right">
                            :تاريخ الفاتورة
                        </div><br>
                        Invoice Id: <label id="invoiceno"></label> <br>
                        <div class="pull-right">
                            :رقم الفاتورة
                        </div><br>
                        Purchase Acc.No: <label id="ponumber"></label> <br>
                        <div class="pull-right">
                            :رقم طلب الشراء
                        </div>
                    </td>

                </tr>
                <tr>
                    <td>
                        VAT Number: <label id="vatnumber"></label> <br>
                        <div class="pull-right">
                            <label id="vatnumber2"></label>
                            :ظريبه الشراء
                        </div>
                    </td>
                    <td>
                        Contact Number: <label id="contact"></label> <br>
                        <div class="pull-right">
                            <label id="contact2"></label>
                            :رقم الاتصال
                        </div>
                    </td>
                    <td>
                        Supply Date: <label></label> <br>
                        <div class="pull-right">
                            :تاريخ العرض
                        </div>
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        Mode of payment: <label id="paymode"></label><br>
                        طريقة الدفع
                    </td>
                    <td>
                        DN Number: <br>
                        مذكرة تسليم
                    </td>
                </tr>
                <tr>
                    <table class="table  table-bordered table-striped m-b-0">
                        <th width="10" align="center">Sl.No</th>
                        <th align="center">Product Code</th>
                        <th align="center">Description</th>
                        <th align="center">Qty</th>
                        <th align="center">MRP</th>
                        <th align="center">Tax</th>
                        <th align="center">Amount</th>
                        <tbody id="products">
                            
                            </tbody>
                            <tr>
                                <td colspan="5" rowspan="4"></td>
                                <td>
                                    Sub Total
                                    <div class="pull-right">:المجموع الفرعي</div>
                                </td>
                                <td><label id="subtotal"></label></td>
                            </tr>
                            <tr>
                                <td>
                                    Discount
                                    <div class="pull-right">:خصم</div>
                                </td>
                                <td><label id="discount"></label></td>
                            </tr>
                            <tr>
                                <td>
                                    Total VAT
                                    <div class="pull-right">:مجموع برميل</div>
                                </td>
                                <td><label id="vat"></label></td>
                            </tr>
                            <tr>
                                <td>
                                    Total 
                                    <div class="pull-right">:مجموع</div>
                                </td>
                                <td><label id="total"></label></td>
                            </tr>
                            <tr style="border: none;">
                                <td colspan="5">
                                    استلمت من قبل<br>
                                    Received By:
                                </td>
                                <td colspan="2">
                                    <div class="">
                                        صادر عن <br>
                                        Issued By: &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </tr>
            </tbody>
        </table>
