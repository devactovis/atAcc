    <script>
        $(document).ready(function () {
            $.ajax({
                type: "POST",
                url: "/Invoice/InvoicePrint",
                data: { id: "@ViewBag.id" },
                dataType: 'json',
                success: function (data) {
                    var slno = 1;
                    $.each(data, function (i, product) {
                        i++;
                        var acc_id = product["tbl_invoice"].acc_id;
                        if(acc_id=="custom")
                        {
                            $.ajax({
                                type: "POST",
                                url: "/Invoice/invoiceCustome",
                                data: { acc_id: "@ViewBag.id" },
                                dataType: 'json',
                                success : function (data2)
                                {
                                    
                                    $.each(data2, function (i, item) {
                                        $("#companyname").html(data2[0].party_name);
                                        $("#partyvno").html(data2[0].party_vno);
                                        $("#companynamearabic").html(data2[0].party_namearabic);

                                    });
                                }
                            });


                        }
                        else
                        {
                            $.ajax({
                                type: "POST",
                                url: "/Invoice/invoiceAccount",
                                data: { acc_id: acc_id },
                                dataType: 'json',
                                success: function (data2) {
                                    
                                    $.each(data2, function (i, item) {
                                        $("#partyspan").html("");
                                        $("#companyname").html(data2[0].contact_person + "<br>" + data2[0].addr1 + "<br>" + data2[0].addr2 + "<br>" + data2[0].city);
                                        
                                        $("#partyvno").html("");
                                        $("#companynamearabic").html(data2[0].contact_personArabic + "<br>" + data2[0].addr1Arabic + "<br>" + data2[0].addr2Arabic + "<br>" + data2[0].cityArabic);
                                        $("#vatnumber").html(data2[0].vat_no);
                                        $("#vatnumber2").html(data2[0].vat_no); 
                                        $("#contact").html(data2[0].mob_no);
                                        $("#contact2").html(data2[0].mob_no);
                                    });
                                }
                            });


                        }
                        var invoiceid = product["tbl_invoice"].invoice_id;
                        $("#invoiceno").html(invoiceid);
                        $("#ponumber").html(product["tbl_invoice"].purchase_acc); 
                        $("#paymode").html(product["tbl_invoice"].cash_party_acc);
                        var rowdata = "<tr>" + 
                            "<td>"+slno+"</td>" +
                            "<td>" + product["tbl_purchaseInvoice"].code + "</td>" +
                            "<td>" + product["tbl_purchaseInvoice"].product_name + "</td>" +
                            "<td>" + product["tbl_purchaseInvoice"].quantity + "</td>" +
                            "<td>" + product["tbl_purchaseInvoice"].mrp + "</td>" +
                            "<td>" + product["tbl_purchaseInvoice"].total_tax + "</td>" +
                            "<td>" + product["tbl_purchaseInvoice"].net_amt + "</td>" +
                            "</tr>";
                        $("#products").append(rowdata);
                        slno++;
                        $("#total").html(product["tbl_invoice"].tot_net);
                        $("#subtotal").html(product["tbl_invoice"].tot_gross);
                        var disc = "";
                        if (product["tbl_invoice"].spl_disc == null) {
                            $("#discount").html("0");
                        } else {
                            $("#discount").html(product["tbl_invoice"].tot_gross);
                        }
                        $("#vat").html((product["tbl_invoice"].tot_net * 5) / 100);
                        $("#discount").html("0");
                        var value = new Date(parseInt(product["tbl_invoice"].date.replace(/(^.*\()|([+-].*$)/g, '')));
                        var date = value.getMonth() + 1 + "-" + value.getDate() + "-" + value.getFullYear();
                        $("#invoicedate").html(date);
                    });

                },
                error: function (data) {
                    alert('fail');
                }
            });
        });
    </script> 
