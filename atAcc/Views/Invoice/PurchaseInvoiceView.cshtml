@model atAcc.Models.ViewModels.InvoiceParent
@{
    ViewBag.Title = "PurchaseInvoiceView";
}
<style>
    .ui-autocomplete {
        max-height: 600px;
        overflow-y: auto; /* prevent horizontal scrollbar */
        overflow-x: auto; /* add padding to account for vertical scrollbar */
