    function Alter(id) {
        var net_tot = 0;
        var total_qunatity = 0;
            var amount = $('#amount_' + id).val();
            var qty = $('#quantity_' + id).val();
            var tax_prcnt = $('#tax_prcnt_' + id).val();
            var rate = $('#mrp_' + id).val();
            total = qty * rate;

            var spl_disc_prcnt = $('#spl_discpercent_' + id).val();
            var discount = (amount * spl_disc_prcnt) / 100;

            $('#spl_disc_' + id).val(discount);
            $('#amount_' + id).val(total);
            var taxvalue = (total * parseInt(tax_prcnt)) / 100;
            $('#total_tax_' + id).val(taxvalue);
            $('#net_amt_' + id).val(total - discount + taxvalue);
           // $('#net_total').html(total - discount);
            $('.net_amount').each((index, element) => {
                var h = index + 1;
                var fetch = parseFloat($('#net_amt_' + h).val());
                net_tot = parseFloat(net_tot) + fetch;
                var fetch_quantity = parseFloat($('#quantity_' + h).val());
                total_qunatity = parseFloat(total_qunatity) + fetch_quantity;
            });
            $('#net_total_quantity').html(total_qunatity + " ");
            $('#net_total').html(net_tot);
            $('#grand_total').html(net_tot);
    }
