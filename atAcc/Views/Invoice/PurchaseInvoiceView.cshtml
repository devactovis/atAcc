                $.ajax({
                    url: "/Invoice/getProductCode",
                    type: "POST",
                    dataType: "json",
                    data: { keyword: request.term },
                    success: function (data) {
                        response($.map(data,
                            function (item) {
                                return { label: item, value: item };
                            }));
                    },
                    error: function () {
                        alert('something went wrong !');
                    }
                })
            },
