                                                        </tr>
                                                    }
                                                    else
                                                    {
                                                        int i = 1;
                                                        foreach (var acc in ViewBag.products)
                                                        {

                                                            <tr id="row_@i">
                                                                <td><span id='snum'>@i</span></td>
                                                                <td id="append"><input type='text' id='product_code_@i' name='code[]' onclick='autoComplete(@i)' size="2" value="@acc.code" /></td>
                                                                <td><input type='text' id='product_name_@i' name='product_name[]' style="width:100%" value="@acc.product_name" /></td>
