<script>
    var i = 2;

    function autoComplete(id) {

        $("#product_code" + id).autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: "/Invoice/getProductCode",
                    type: "POST",
                    dataType: "json",
                    data: { keyword: request.term },
                    success: function (data) {
                        response($.map(data,
                            function (item) {
                                return { label: item, value: item };
                            }));
                    },
                    error: function () {
                        alert('something went wrong !');
                    }
                })
            },
            appendTo: '#append',
            select: function (event, ui) {
                $(this).val(ui.item.label);
                var productcode = ui.item.value;
                $.ajax({
                    url: '/Invoice/getProduct', type: "GET", dataType: "json",
                    data: { id: productcode },
                    success: function (data) {
                        $('#product_name'+id).val(data.product_name)
                        $('#quantity'+id).val('0')
                        $('#amount'+id).val('0')
                        $('#spl_discpercent' + id).val('0')
                        $('#spl_disc' + id).val('0')
                        $('#add_disc' + id).val('0')
                        $('#total_tax' + id).val('0')
                        $('#net_amt' + id).val('0')
                        $('#gst_percent' + id).val('0')
                        $('#discount' + id).val('0')
                        $('#gst' + id).val('0')
                        $('#mrp' + id).val(data.mrp)
                        $('#imeno' + id).val(data.hsn_code)
                    },
                    error: function (xhr, status, error) {
                    }
                });

                return false;
            },
            messages: {
                noResults: "",
                results: ""
            }
        });


    }




    function Alter(id) {
        var net_tot = 0;
        var total_qunatity = 0;
            var amount = $('#amount' + id).val();
            var qty = $('#quantity' + id).val();
            var rate = $('#mrp' + id).val();
            total = qty * rate;
            var spl_disc_prcnt = $('#spl_discpercent' + id).val();
            var discount = (amount * spl_disc_prcnt) / 100;
            $('#spl_disc' + id).val(discount);
            $('#amount' + id).val(total);
            $('#net_amt' + id).val(total - discount);
           // $('#net_total').html(total - discount);
            $('.net_amount').each((index, element) => {
                var h = index + 1;
                var fetch = parseInt($('#net_amt' + h).val());
                net_tot = parseInt(net_tot) + fetch;
                var fetch_quantity = parseInt($('#quantity' + h).val());
                total_qunatity = parseInt(total_qunatity) + fetch_quantity;
            });
            $('#net_total_quantity').html(total_qunatity + " ");
            $('#net_total').html(net_tot);
            $('#grand_total').html(net_tot);
    }

    $(".addmore").on('click', function () {
        count = $('table tr').length;
        var data = "<tr><td><span id='snum" + i + "'>" + i + ".</span></td>";
        data += "<td><input type='text' id='product_code" + i + "' size=\"2\" name='code[]' size=\"2\" onclick='autoComplete(" + i + ")' /></td><td><input type='text' id='product_name" + i + "' name='product_name[]' size=\"3\" /></td><td><input type='text' id='quantity" + i + "' name='quantity[]' onkeyup='Alter(" + i + ")' size=\"2\" /></td><td><input type='text' id='amount" + i + "' name='amount[]' size=\"2\" /></td><td><input type='text' id='spl_discpercent" + i + "' name='spl_discpercent[]' onkeyup='Alter(" + i + ")' size=\"2\" /> </td><td><input type='text' id='spl_disc" + i + "' name='spl_disc[]' size=\"2\" /></td><td><input type='text' id='add_disc" + i + "' name='add_disc[]' size=\"2\" /></td><td><input type='text' id='total_tax" + i + "' name='total_tax[]' size=\"3\" /></td><td><input type='text' id='net_amt" + i + "' name='net_amt[]' size=\"2\" class='net_amount'/> </td><td><input type='text' id='gst_percent" + i + "' name='gst_percent[]' size=\"2\" /></td><td><input type='text' id='discount" + i + "' name='discount[]' size=\"3\" /> </td><td><input type='text' id='gst" + i + "' name='gst[]' size='2'></td><td><input type='text' id='mrp" + i + "' name='mrp[]' size=\"2\" /></td>><td><input type='text' id='imeno" + i + "' name='imeno[]' size=\"2\" /> </td></tr>";
        $('#productstable').append(data);
        i++;
    });
</script>
