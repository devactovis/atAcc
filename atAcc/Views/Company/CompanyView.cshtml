
@{
    ViewBag.Title = "CompanyView";
}




<!-- Page wrapper  -->
<!-- ============================================================== -->
<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <h3 class="text-themecolor">Startup</h3>
        </div>
        <div class="col-md-7 align-self-center">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                <li class="breadcrumb-item">Forms</li>
                <li class="breadcrumb-item active">Form wizards</li>
            </ol>
        </div>

    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body wizard-content">
                        <h4 class="card-title">Startup wizard</h4>
                        <h6 class="card-subtitle">Enter the details of the company</h6>
                        <form role="form" method="post" action="/Company/SaveCompany" class="tab-wizard wizard-circle">
                            <!-- Step 1 -->
                            <h6>New Company</h6>
                            <section>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="firstName1">Comapny Name :</label>
                                            <input type="text" name="compname" class="form-control" id="firstName1" required>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="lastName1">Website URL :</label>
                                            <input type="text" name="compurl" class="form-control" id="lastName1" required>
                                        </div>
                                    </div>
                                </div>

                            </section>
                            <!-- Step 2 -->
                            <h6>Address</h6>
                            <section>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="jobTitle1">Address :</label>
                                            <input type="text" name="compaddr" class="form-control" id="jobTitle1" required>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="videoUrl1">City :</label>
                                            <input type="text" name="city" class="form-control" id="videoUrl1" required>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="videoUrl1">State :</label>
                                            <input type="text" name="state" class="form-control" id="videoUrl1" required>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="videoUrl1">Postal Code :</label>
                                            <input type="number" maxlength="6" name="postalcode" class="form-control" id="videoUrl1" required>
                                        </div>
                                    </div>
                                </div>
                            </section>
                            <!-- Step 3 -->
                            <h6>Contact Information</h6>
                            <section>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="int1">Telephone :</label>
                                            <input type="text" name="telephoneno" class="form-control" id="int1" required>
                                        </div>
                                        <div class="form-group">
                                            <label for="int1">Mobile :</label>
                                            <input type="text"  name="mobno" class="form-control" id="int1" required>
                                        </div>
                                        <div class="form-group">
                                            <label for="int1">Fax :</label>
                                            <input type="text" name="compfax" class="form-control" id="int1" required>
                                        </div>

                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="int1">Email :</label>
                                            <input type="text" name="compemail" class="form-control" id="int1" required>
                                        </div>
                                        <div class="form-group">
                                            <label for="int1">Website :</label>
                                            <input type="text" name="compsite" class="form-control" id="int1" required>
                                        </div>

                                    </div>
                                </div>
                            </section>
                            <!-- Step 4 -->
                            <h6>Account/Tax information</h6>
                            <section>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="behName1">VAT Password :</label>
                                            <input type="password" name="vatpswd" class="form-control" id="behName1" required>
                                        </div>
                                        <div class="form-group">
                                            <label for="participants1">Account Number</label>
                                            <input type="number" name="accno" class="form-control" id="participants1" required>
                                        </div>
                                        <div class="form-group">
                                            <label for="participants1">Tax Number</label>
                                            <input type="text" name="tax" class="form-control" id="participants1" required>
                                        </div>

                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="participants1">VAT Number</label>
                                            <input type="text" name="vatno" class="form-control" id="participants1" required>
                                        </div>
                                        <div class="form-group">
                                            <label for="participants1">Currency</label>
                                            <input type="number" name="currency" class="form-control" id="participants1" required>
                                        </div>

                                    </div>
                                </div>
                            </section>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- vertical wizard -->
        <!-- ============================================================== -->
        <!-- End PAge Content -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Right sidebar -->

    </div>
    <!-- ============================================================== -->
    <!-- End Container fluid  -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
